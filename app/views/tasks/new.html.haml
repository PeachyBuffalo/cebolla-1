.ui.breadcrumb
  = link_to 'Dashboard', root_path, class: 'section'
  %i.right.angle.divider.icon
  = link_to 'Projects', projects_path, class: 'section'
  %i.right.angle.divider.icon
  = link_to @project.name, project_path(@project), class: 'section'
  %i.right.angle.divider.icon
  .active.section New Task

= form_with scope: :task, url: project_tasks_path, class: 'ui form' do |f|
  = render partial: 'fields', locals: { f: f }
  = f.submit 'Add Task', class: 'ui button'
